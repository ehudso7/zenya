# Application
# IMPORTANT: In production, this MUST be set to https://zenyaai.com
# Any other domain will be rejected by the security system
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# AI Providers
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key
COHERE_API_KEY=your-cohere-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# Fine-tuned Models
ZENYA_FINE_TUNED_MODEL=ft:gpt-3.5-turbo-1106:zenya-chat-v1:your-suffix
ENABLE_FINE_TUNED_MODEL=false
FINE_TUNED_MODEL_MIN_USAGE_SCORE=80
FINE_TUNED_MODEL_ROLLOUT_PERCENTAGE=25

# Demo Account (Optional - for demo login functionality)
# Use strong passwords in production!
DEMO_EMAIL=demo@zenyaai.com
DEMO_PASSWORD=your-secure-demo-password-here
# Alternative env var name for backwards compatibility
DEMO_ACCOUNT_PASSWORD=your-secure-demo-password-here

# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn
SENTRY_AUTH_TOKEN=your-sentry-auth-token
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Analytics (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Rate Limiting (Optional)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Security
JWT_SECRET=your-jwt-secret
ENCRYPTION_KEY=your-encryption-key

# Redis (For Rate Limiting - Optional)
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# Email (Future)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
EMAIL_FROM=noreply@zenyaai.com

# Stripe (Future)
STRIPE_PUBLIC_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx